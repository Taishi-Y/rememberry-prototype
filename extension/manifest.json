{
    "manifest_version": 2,

    "author": "__MSG_author__",
    "name": "__MSG_ext_name__",
    "version": "1.0",
    "default_locale": "uk",

    "description": "__MSG_ext_description__",

    "background": {
        "scripts": [
            "js/utils/common.js",
            "js/storage/Storage.js",
            "js/utils/AJAX.js",
            "js/utils/SM2.js",
            "js/utils/contentAPI.js",
            "js/storage/ConfigStorage.js",
            "js/storage/DeckStorage.js",
            "js/storage/CardStorage.js",
            "js/storage/JSON_Storage.js",
            "js/background/background.js"
        ]
    },

    "browser_action": {
        "default_icon": {
            "19": "img/ico/card19.png",
            "38": "img/ico/card38.png"
        },
        "default_popup": "html/popup.html"
    },

    "options_ui": {
        "chrome_style": true,
        "page": "html/options.html"
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],

            "js": [
                "js/utils/common.js",
                "js/utils/bgAPI.js",
                "js/utils/AJAX.js",
                "js/content/TranslationWindow.js",
                "js/content/content.js"
            ],

            "run_at": "document_start",
            "all_frames": false
        }
    ],

    "permissions": [
        "storage",
        "contextMenus"
    ],

    "icons": {
        "16": "img/ico/card16.png",
        "48": "img/ico/card48.png",
        "128": "img/ico/card128.png"
    },

    "web_accessible_resources": [
        "css/content.css"
    ]
}