{
    "manifest_version": 2,

    "author": "Myroslava Yurchyshyn",
    "name": "Rememberry",
    "version": "0.1",

    "description": "Remember words translation easily",

    "browser_action": {
        "default_icon": {
            "19": "img/ico/icon19.png",
            "38": "img/ico/icon38.png"
        },
        "default_popup": "html/popup.html"
    },

    "background": {
        "scripts": [ "js/background.js" ],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],

            "js": [ "js/content.js" ],
            "css": [ "css/content.css" ],

            "run_at": "document_start",
            "all_frames": true
        }
    ],

    "options_ui": {
        "chrome_style": true,
        "page": "html/options.html"
    }
}