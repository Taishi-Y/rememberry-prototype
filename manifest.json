{
    "manifest_version": 2,

    "author": "Myroslava Yurchyshyn",
    "name": "Rememberry",
    "version": "0.1",

    "description": "Remember words translation easily",

    "background": {
        "scripts": [
            "js/common.js",
            "js/content/API.js",
            "js/background/Preferences.js",
            "js/background/Terms.js",
            "js/AJAX.js",
            "js/background/main.js"
        ],
        "persistent": false
    },

    "browser_action": {
        "default_icon": {
            "19": "img/ico/icon19.png",
            "38": "img/ico/icon38.png"
        },
        "default_popup": "html/popup.html"
    },

    "options_ui": {
        "chrome_style": true,

        "page": "html/options.html"
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],

            "js": [
                "js/common.js",
                "js/background/API.js",
                "js/AJAX.js",
                "js/content/Popup.js",
                "js/content/main.js"
            ],
            "css": [ "css/content.css" ],

            "run_at": "document_start",
            "all_frames": false
        }
    ],

    "permissions": [
        "storage"
    ]
}