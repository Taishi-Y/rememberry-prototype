{
    "manifest_version": 2,

    "author": "Myroslava Yurchyshyn",
    "name": "Rememberry",
    "version": "0.1",

    "description": "Remember words translation easily",

    "background": {
        "scripts": [
            "js/utils/common.js",
            "js/utils/AJAX.js",
            "js/content/contentAPI.js",
            "js/background/Config.js",
            "js/background/CardsStorage.js",
            "js/background/background.js"
        ]
    },

    "browser_action": {
        "default_icon": {
            "19": "img/ico/icon19.png",
            "38": "img/ico/icon38.png"
        },
        "default_popup": "html/popup.html"
    },

    "options_ui": {
        "chrome_style": true,

        "page": "html/options.html"
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],

            "js": [
                "js/utils/common.js",
                "js/background/bgAPI.js",
                "js/content/TranslationWindow.js",
                "js/content/content.js"
            ],
            "css": [ "css/content.css" ],

            "run_at": "document_start",
            "all_frames": false
        }
    ],

    "permissions": [
        "storage",
        "contextMenus"
    ]
}